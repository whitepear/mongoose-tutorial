extends layout

block content
	.container
		.text-center
			h1 Virtual Stand Up Meeting Notes
			p.lead This is a list of the last dozen meeting notes that were entered in. 

		div
			.container
				.col-md-12.column.list-group
					each note in notes
						.list-group-item
							div Note from #{note.memberName} on #{note.createdOn} for project: #{note.projectName}
							div Work Yesterday: #{note.workYesterday}
							div Work Today: #{note.workToday}
							div Impediments: #{note.impediment} 
		br 					
		div
			.container
				form(action='/', method="POST")
					.row.clearfix
						.col-md-4.column
							select#memberName.form-control(name="memberName")
								option(value="") (Show All Members)
								option(value="Mark") Mark
								option(value="David") David
								option(value="John") John
								option(value="Mary") Mary
								option(value="Bob") Bob
						.col-md-8.column
							button#btnFilterNotes.btn.btn-primary(name="btnFilterNotes", type="submit") Filter Notes...		









